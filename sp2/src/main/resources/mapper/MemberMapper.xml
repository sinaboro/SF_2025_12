<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.MemberMapper">
 
  <insert id="insert" 
  		useGeneratedKeys="true"	keyProperty="mno">
  	insert into tbl_member(name,password,email)
 	values ( #{name},#{password},#{email} )	
  </insert>
  
  <select id="getList" resultType="org.zerock.dto.MemberDTO">
  	select * from tbl_member
  	order by mno desc
  </select>
  
  <select id="memberById" resultType="org.zerock.dto.MemberDTO">
  	select * 
  	from tbl_member
  	where mno = #{mno}
  </select>
  
  <update id="update">
  	update tbl_member
  	set name = #{name}, password=#{password},
  		email = #{email}, updatedate=now()
  	where mno = #{mno}
  </update>
  
  <delete id="delete">
  	delete from tbl_member where mno = #{mno}
  </delete>
</mapper>




